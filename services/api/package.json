{
  "name": "tectonic-api",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "pre-commit": [
    "lint"
  ],
  "scripts": {
    "start": "nodemon -w src --exec \"PUBSUB_EMULATOR_HOST=localhost:8200 node src/index.js\"",
    "start:production": "node src/index",
    "elasticsearch-sink:start": "nodemon -w src --exec \"PUBSUB_EMULATOR_HOST=localhost:8200 node src/workers/elasticsearch-sink.js\"",
    "elasticsearch-sink:start:production": "node src/workers/elasticsearch-sink.js",
    "docs": "node scripts/generate-openapi",
    "lint": "eslint src scripts",
    "test": "jest",
    "test:watch": "jest --watch -i",
    "generate": "cd ../../generator && yarn install && yarn generate"
  },
  "dependencies": {
    "@bedrockio/config": "^2.1.1",
    "@bedrockio/instrumentation": "^1.4.9",
    "@elastic/elasticsearch": "^7.12.0",
    "@google-cloud/pubsub": "^2.10.0",
    "@google-cloud/storage": "^5.1.2",
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^9.3.1",
    "@sentry/node": "^6.2.1",
    "bcrypt": "^5.1.1",
    "fast-csv": "^4.3.6",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "lodash": "^4.17.19",
    "mongoose": "^5.13.3",
    "mongoose-autopopulate": "^0.12.2",
    "node-fetch": "^2.6.1",
    "pino": "^6.11.0",
    "postmark": "^2.5.4",
    "snyk": "^1.359.1"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.2",
    "@yeongjet/joi-to-json-schema": "^1.0.4",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.19.0",
    "jest": "^26.1.0",
    "juice": "^7.0.0",
    "mongodb": "^3.6.2",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/src/test-helpers/setup-tests.js"
    ]
  },
  "volta": {
    "node": "14.16.0",
    "yarn": "1.22.5"
  }
}
